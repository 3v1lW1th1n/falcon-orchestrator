@model FalconOrchestratorWeb.Models.ViewModels.IndicatorViewModel

@{
    ViewBag.Title = "Indicators - Create";
}
<div class="container box-shadow">
    @using (Html.BeginForm("create", "indicator", FormMethod.Post))
    {
        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            <span class="fa fa-2x fa-edit"></span>
            <span class="header">Create Indicator</span>
            <hr />
            @Html.ValidationSummary()
            <p>                            
            </p>
            <div class="well">
                <div class="form-group">
                    @Html.LabelFor(x => x.Type, "Type:", new { @class = "control-label col-2" })
                    <div class="col-10">
                        @Html.DropDownListFor(x => x.Type, Model.TypeList, String.Empty, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Type)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Value, "Value:", new { @class = "control-label col-2" })
                    <div class="col-10">
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Value)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ExpirationDays, "Expiration Days:", new { @class = "control-label col-2" })
                    <div class="col-10">
                        @Html.TextBoxFor(x => x.ExpirationDays, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ExpirationDays)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Source, "Source:", new { @class = "control-label col-2" })
                    <div class="col-10">
                        @Html.TextBoxFor(x => x.Source, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Source)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Policy, "Policy:", new { @class = "control-label col-2" })
                    <div class="col-10">
                        @Html.DropDownListFor(x => x.Policy, Model.PolicyList, String.Empty, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Policy)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Description, "Description:", new { @class = "control-label col-2" })
                    <div class="col-10">
                        @Html.TextAreaFor(x => x.Description, new { @rows = "8", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Description)
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-align">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-save"></i> Save
                        </button>
                    </div>
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    }
</div>


